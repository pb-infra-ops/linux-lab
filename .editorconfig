# top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# For Bash scripts
[*.sh]
indent_size = 2

# For YAML (e.g. Ansible playbooks)
[*.yml]
indent_size = 2

# For Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
